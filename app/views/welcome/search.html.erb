<h2>Search Results for <%= params[:search].split.map(&:capitalize).join(' ')%></h2>

  <%= form_tag '/places', method: :post do %>
    <%= hidden_field_tag(:search, params[:search]) %>
    <%= submit_tag 'Save to Favorites', data: { confirm: "Saved to Favorite Places! Go to Profile so see favorites" } %>

  <% end %>

<p>
<% @photos.each do |pic| %>
  <a href="https://farm<%= pic["farm"].to_s %>.staticflickr.com/<%= pic["server"] %>/<%= pic["id"] %>_<%= pic["secret"] %>_b.jpg"><img src="https://farm<%= pic["farm"].to_s %>.staticflickr.com/<%= pic["server"] %>/<%= pic["id"] %>_<%= pic["secret"] %>_z.jpg"></a>
<% end %>
</p>
